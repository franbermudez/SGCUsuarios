@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/font-awesome.min.css" />

    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/dist/css/sb-admin-2.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/css/style.css">
    <style type="text/css">
        .img-bg-mine {
            background: url("../../lib/img/login.jpg") no-repeat center center fixed;
            background-size: cover;
        }
    </style>

</head>
<body class="hold-transition login-page img-bg-mine img-bg-mine">
    <div class="login-box">
        <div class="login-logo">
            <h2>SGC</h2>
        </div>
        <!-- /.login-logo -->
        <div class="">
            <p class="login-box-msg">Introduzca sus datos de ingreso</p>
            <form>
                <div class="inputBox">
                    <input type="text" class="form-control" name="username" required=""><label>Usuario</label>
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="inputBox">
                    <input type="password" class="form-control" name="password" required=""><label>Contraseña</label>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <a href="../Menu/Escritorio"><span type="submit" class="btn btn-primary btn-block btn-flat">Sign In</span></a>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

</body>
</html>